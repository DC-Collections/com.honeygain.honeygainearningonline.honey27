<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical"
    android:weightSum="3">

    <FrameLayout
        android:id="@+id/fl_adplaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">


    </FrameLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Honey Gain Case"
                android:textColor="#000000"
                android:textSize="25.0sp"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/login_number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/honeygain27_backline"
                android:drawableLeft="@drawable/honeygain27_phone"
                android:drawablePadding="8.0dip"
                android:gravity="center_vertical"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="10.0dip"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16.0sp" />

            <EditText

                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/honeygain27_backline"
                android:drawableLeft="@drawable/honeygain27_password"
                android:drawablePadding="8.0dip"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10.0dip"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16.0sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/login"
                    style="@style/ExtendedFloatingActionButton.NoRadius"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:backgroundTint="#FFC107"
                    android:onClick="displayToast"
                    android:padding="10dp"
                    android:text="Login"
                    android:textColor="#000"
                    android:textSize="17.0sp"
                    android:textStyle="bold" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/register"
                    style="@style/ExtendedFloatingActionButton.NoRadius"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:backgroundTint="#FFC107"
                    android:onClick="displayToast"
                    android:padding="10dp"
                    android:text="Register"
                    android:textColor="#000"
                    android:textSize="17.0sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fl_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible">
    </FrameLayout>

</LinearLayout>