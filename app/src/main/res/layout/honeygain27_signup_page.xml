<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="3"

    >



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10.0dip"
        android:text="@string/signup"
        android:textColor="@color/white_greyish"
        android:textSize="20.0sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_adplaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


            </FrameLayout>
            <EditText
                android:id="@+id/fullName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/honeygain27_backline"
                android:drawableLeft="@drawable/honeygain27_user"
                android:drawablePadding="8.0dip"
                android:gravity="center_vertical"
                android:hint="Full Name"
                android:inputType="textCapWords"
                android:padding="10.0dip"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16.0sp" />


            <EditText
                android:id="@+id/userEmailId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/honeygain27_backline"
                android:drawableLeft="@drawable/honeygain27_email"
                android:drawablePadding="8.0dip"
                android:gravity="center_vertical"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10.0dip"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16.0sp" />


            <EditText
                android:id="@+id/mobileNumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/honeygain27_backline"
                android:drawableLeft="@drawable/honeygain27_phone"
                android:drawablePadding="8.0dip"
                android:gravity="center_vertical"
                android:hint="Mobile No."
                android:inputType="number"
                android:padding="10.0dip"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16.0sp" />


            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/honeygain27_backline"
                android:drawableLeft="@drawable/honeygain27_password"
                android:drawablePadding="8.0dip"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10.0dip"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16.0sp" />


            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/honeygain27_backline"
                android:drawableLeft="@drawable/honeygain27_confirm_password"
                android:drawablePadding="8.0dip"
                android:gravity="center_vertical"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="10.0dip"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16.0sp" />

            <CheckBox
                android:id="@+id/terms_conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7.0dip"
                android:gravity="center"
                android:text="Terms Conditions"
                android:textColor="#000000"
                android:textSize="14.0sp"
                tools:ignore="HardcodedText" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/signup"
                style="@style/ExtendedFloatingActionButton.NoRadius"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:backgroundTint="#FFC107"
                android:gravity="center"
                android:padding="3.0dip"
                android:text="@string/signup"
                android:textSize="17.0sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/fl_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

    </FrameLayout>

</LinearLayout>